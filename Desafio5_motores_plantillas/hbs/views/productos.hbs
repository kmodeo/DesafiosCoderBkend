<section class='p-4 bg-light'>
	<h2 class='text-primary'>Vista de Productos</h2>
	{{#if productos}}
		<table class='table table-striped'>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Precio</th>
					<th>Url</th>
				</tr>
			</thead>
			<tbody>
				{{#each productos}}
					<tr>
						<td class='align-middle'>{{this.nombre}}</td>
						<td class='align-middle'>{{this.precio}}</td>
						<td class='align-middle'>
							<img src='{{this.url}}' alt='{{this.nombre}}' />
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{else}}
		<h2 class='bg-info p-4 text-danger'>No se encontraron productos</h2>
	{{/if}}
	<div class='mt-3'>
		<a href='/productos'>
			<button class='btn btn-danger'>Agregar producto</button>
		</a>
	</div>
</section>